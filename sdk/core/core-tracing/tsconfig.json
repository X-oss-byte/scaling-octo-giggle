{
  "extends": "../../../tsconfig.package",
  "compilerOptions": {
    "declarationDir": "./types",
    "outDir": "./dist-esm",
    "paths": {
      "@azure/core-tracing": ["./src/index.js"]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "."
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules", "types/**", "./samples/**/*.ts"],
  "include": ["./src/**/*.ts", "./test/**/*.ts", "./samples-dev/**/*.ts"]
}
